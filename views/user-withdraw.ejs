<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Withdrawals</title>
    <link rel="stylesheet" href="/admin/user-withdraw.css">
</head>
<body>
    <div class="container">
        <h1>Your Withdrawals</h1>
        <div class="withdrawals-list">
            <% withdrawals.forEach(function(withdrawal) { %>
                <div class="withdrawal-item">
                    <div class="withdrawal-details">
                        <div class="detail-row">
                            <span class="detail-label">Transfer ID:</span>
                            <span class="detail-value"><%= withdrawal.transfer_id %></span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label">Amount:</span>
                            <span class="detail-value">â‚¹<%= withdrawal.transfer_amount %></span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label">Date & Time:</span>
                            <span class="detail-value"><%= new Date(withdrawal.created_at).toLocaleString() %></span>
                        </div>
                    </div>
                    <div class="status-box <%= withdrawal.status.toLowerCase() %>">
                        <%= withdrawal.status === 'PENDING' ? 'In Process' : withdrawal.status %>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>
